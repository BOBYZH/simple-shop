<% layout('layout/main.ejs') -%>

  <div class="container my-5">
    <div class="mx-auto col-12 my-5">
      <form method="post" action="/signin" class="login my-5 row">
        <h2 class="text-dark mx-auto col-7 my-3 text-center font-weight-normal">Account Login</h2>
        <input type="email" class="email form-row mx-auto col-7 my-4 align-self-center border border-dark" placeholder="Email"
          style="height: 40px;" name="email" required>
        <input type="password" class="password form-row mx-auto col-7 my-4 align-self-center border border-dark"
          placeholder="Password" style="height: 40px;" name="password" required>
        <div class="submit col-7 my-5 align-self-center mx-auto row">
          <button class="form-row mx-auto py-2 px-4 bg-white border border-secondary rounded-lg shadow-sm">
            Sign In
          </button>
          <a href="/signup" class="mx-auto py-2 px-4">Or Register</a>
        </div>
      </form>
    </div>
  </div>