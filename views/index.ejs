<% layout('layout/main.ejs') -%>

  <div class="list-group container">
    <% if (products.length !==0) { %>
      <table class="table table-striped table-borderless">
        <tbody>
          <% products.forEach( product=> { %>
            <tr>
              <td class="align-middle pl-5">
                <img src="<%= product.imgUrl %>" alt="<%= product.prodName %>">
              </td>
              <td class="align-middle">
                <h4>
                  <%= product.prodName %>
                </h4>
              </td>
              <td class="align-middle pr-2 h5">
                NT$ <%= product.price %>
              </td>
              <td class="align-middle pr-2 h6">
                <span class="h4 text-danger">
                  <%= product.quantity %>
                </span> in stock!
              </td>
              <td class="align-middle">
                <a href="/products/<%= product.id %>" class="btn btn-danger">Details</a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
      <% } else { %>
        <div class="container py-5 bg-white">
          <h5 class="text-center mb-5 py-4 border-top border-bottom">目前尚未有商品上架</h5>
        </div>
        <% } %>
  </div>