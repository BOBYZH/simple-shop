<% layout('layout/main.ejs') -%>

<div class="list-group container">
  <table class="table table-striped table-borderless">
    <tbody>
      <% products.forEach( product=> { %>
        <tr>
          <td class="align-middle pl-5">
            <img src="<%= product.imgUrl %>" alt="<%= product.prodName %>">
          </td>
          <td class="align-middle h3">
            <%= product.prodName %>
          </td>
          <td class="align-middle pr-2 h5">
            NT$ <%= product.price %>
          </td>
          <td class="align-middle pr-2 h6">
            庫存還剩：
            <span class="h4 text-danger">
              <%= product.quantity %>
            </span>
          </td>
          <td class="align-middle">
            <a href="/products/<%= product.id %>" class="btn btn-danger">規格說明</a>
          </td>
        </tr>
        <% }) %>
    </tbody>
  </table>
</div>
